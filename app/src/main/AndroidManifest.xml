<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rickylaishram.hackernews"
    android:versionCode="21"
    android:versionName="@string/app_version" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <permission android:name="com.rickylaishram.hiccap.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="com.rickylaishram.hiccap.permission.C2D_MESSAGE" />
	<!-- App receives GCM messages. -->
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<!-- GCM connects to Google Services. -->
	<uses-permission android:name="android.permission.INTERNET" /> 
	<!-- GCM requires a Google account. -->
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<!-- Keeps the processor from sleeping when a message is received. -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:icon="@drawable/icon_small"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" android:logo="@drawable/icon_small" android:hardwareAccelerated="true">
        <activity android:name="Splash" android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ListActivity" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="Article" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="Comments" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="Login" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="About" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="Settings" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="Reply" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <!--<activity android:name="com.rickylaishram.hackernews.CommentsNoti" android:configChanges="keyboardHidden|orientation|screenSize" ></activity>-->
        <activity android:name="Bookmarks"></activity>
        
    </application>

</manifest>